{
  "name": "techlove/gpt-translate",
  "description": "A Laravel package to create a base translation file, and translate it to any language with ChatGPT API",
  "keywords": [
    "techlove",
    "gpt-translate",
    "translation",
    "gpt",
    "openai",
    "chatgpt"
  ],
  "homepage": "https://github.com/techlove/gpt-translate",
  "type": "laravel-package",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Techlove\\GptTranslate\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Jesper Lundberg",
      "email": "jesper@techlove.se",
      "role": "Developer"
    }
  ],
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
      "php-http/discovery": true,
      "pestphp/pest-plugin": true
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Techlove\\GptTranslate\\TranslateProvider"
      ]
    }
  },
  "scripts": {
    "test": "pest",
    "test-coverage": "pest --coverage",
    "format": "pint",
    "format-test": "pint --test"
  },
  "require": {
    "php": "^8.2",
    "illuminate/console": "^10.0|^11.0|^12.0",
    "illuminate/support": "^10.0|^11.0|^12.0",
    "openai-php/laravel": "^0.16.0",
    "laravel/prompts": "^0.3.0"
  },
  "require-dev": {
    "laravel/pint": "^1.17",
    "pestphp/pest": "^2.35|^3.0",
    "pestphp/pest-plugin-laravel": "^2.4|^3.0",
    "orchestra/testbench": "^8.0|^9.0|^10.0"
  }
}